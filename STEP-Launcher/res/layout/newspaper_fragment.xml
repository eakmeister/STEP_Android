<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/layBtnNTable"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="250dp"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btnWorld"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:background="@drawable/news_sports"
                android:clickable="true"
                android:textColor="#000"
                android:textSize="12pt"
                android:textStyle="bold" >
            </Button>

            <Button
                android:id="@+id/btnFinance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:background="@drawable/news_finance"
                android:textColor="#000"
                android:textSize="12pt"
                android:textStyle="bold" >
            </Button>

            <Button
                android:id="@+id/btnGovernment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:background="@drawable/news_government"
                android:textColor="#000"
                android:textSize="12pt"
                android:textStyle="bold" >
            </Button>
            
           <Button
                android:id="@+id/btnSports"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:background="@drawable/news_sports"
                android:textColor="#000"
                android:textSize="12pt"
                android:textStyle="bold" >
            </Button>
        </LinearLayout>
	<ListView 
		    android:id="@+id/newsFrag_listview"
        	android:layout_width="fill_parent"
        	android:layout_height="fill_parent"
        	android:visibility="visible"
        	android:scrollbars="vertical" />
	<ScrollView
		    android:id="@+id/scrlReadArticle"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:visibility="gone" >
		    <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical" >
	        <TextView
	            android:id="@+id/txtReadArticle"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:background="#FFF"
	            android:text=""
	            android:textColor="#000"
	            android:textSize="15pt"
	            android:textStyle="bold"
	            android:typeface="serif">
	        </TextView>
	        <Button
	                android:id="@+id/btnPrevious"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_margin="2dip"
	                android:background="#cdc9c9"
	                android:clickable="true"
	                android:text="Previous"
	                android:textColor="#000"
	                android:textSize="12pt"
	                android:textStyle="bold" >
            	</Button>
            <Button
	                android:id="@+id/btnNext"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_margin="2dip"
	                android:background="#cdc9c9"
	                android:clickable="true"
	                android:text="Next"
	                android:textColor="#000"
	                android:textSize="12pt"
	                android:textStyle="bold" >
            	</Button>	
	        
	        </LinearLayout>
		</ScrollView>
		</LinearLayout>
	
	
	
