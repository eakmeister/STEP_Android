<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layBtnNTable"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="146dp"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btnInbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:background="#cdc9c9"
                android:clickable="true"
                android:text="@string/inbox"
                android:textColor="#000"
                android:textSize="12pt"
                android:textStyle="bold" >
            </Button>

            <Button
                android:id="@+id/btnCompose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:background="#cdc9c9"
                android:text="@string/compose"
                android:textColor="#000"
                android:textSize="12pt"
                android:textStyle="bold" >
            </Button>

            <Button
                android:id="@+id/btnSentMail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:background="#cdc9c9"
                android:text="@string/sentMail"
                android:textColor="#000"
                android:textSize="12pt"
                android:textStyle="bold" >
            </Button>
            
           <Button
                android:id="@+id/btnSync"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:background="#cdc9c9"
                android:text="SYNC"
                android:textColor="#000"
                android:textSize="12pt"
                android:textStyle="bold" >
            </Button>
            
            <TextView
		        android:id="@+id/txtConn"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:gravity="right"
		        android:text="" >
		    </TextView>
        </LinearLayout>

		<ListView 
		    android:id="@+id/emailFrag_listview"
        	android:layout_width="fill_parent"
        	android:layout_height="fill_parent"
        	android:visibility="visible"
        	android:scrollbars="vertical" />
		<ScrollView
		    android:id="@+id/scrlReadEmail"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:visibility="gone" >
	        <TextView
	            android:id="@+id/txtReadEmail"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:background="#FFF"
	            android:text=""
	            android:textColor="#000"
	            android:textSize="10pt"
	            android:textStyle="bold"
	            android:typeface="serif">
	        </TextView>
		</ScrollView>
		
		<ScrollView
		    android:id="@+id/scrlCompose"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:visibility="gone">
	        <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical" >
	
	            <LinearLayout
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:orientation="vertical"
	                android:background="#ededed" >
	                <LinearLayout
	                    android:id="@+id/to_wrapper"
	                    android:layout_height="wrap_content"
	                    android:baselineAligned="true"
		                android:layout_marginLeft="6dip"
		                android:layout_marginRight="6dip"
	                    android:layout_width="fill_parent">
		                <EditText
		                    android:id="@+id/compose_to"	                    
		                    android:layout_height="wrap_content"
		                    android:inputType="textEmailAddress|textMultiLine"
		                    android:imeOptions="actionNext"
		                    android:hint="To"
		                    android:textColor="@android:color/primary_text_light"
		                    android:textAppearance="?android:attr/textAppearanceMedium"
		                    android:layout_width="fill_parent"
		                    android:layout_marginRight="6dip"
	                        android:layout_weight="5">
	                    </EditText>
		                <ImageButton
		                    android:id="@+id/add_to"
	                        android:src="@drawable/ic_button_contacts"
		                    android:layout_weight="1"
	                        android:layout_height="fill_parent"
		                    android:layout_width="60dip"
		                    android:layout_marginTop="1dip">
		            	</ImageButton>
					</LinearLayout>
	
	                <EditText
	                    android:id="@+id/compose_subject"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="6dip"
	                    android:layout_marginRight="6dip"
	                    android:hint="Subject"
	                    android:inputType="textEmailSubject|textAutoCorrect|textCapSentences|textImeMultiLine"
	                    android:imeOptions="actionNext"
	                    android:singleLine="true"
	                    android:textColor="@android:color/primary_text_light"
	                    android:textAppearance="?android:attr/textAppearanceMedium">
		        	</EditText>
            	</LinearLayout>
            	<EditText
	                android:id="@+id/compose_message_content"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="1.0"
	                android:gravity="left|top"
	                android:hint="Message Text"
	                android:inputType="textMultiLine|textAutoCorrect|textCapSentences"
	                android:imeOptions="actionDone|flagNoEnterAction"
	                android:minLines="3"
	                android:textColor="@android:color/primary_text_light"
	                android:textAppearance="?android:attr/textAppearanceMedium" >
	        	</EditText>
	        	<Button
	                android:id="@+id/btnSend"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_margin="2dip"
	                android:background="#cdc9c9"
	                android:clickable="true"
	                android:text="Send"
	                android:textColor="#000"
	                android:textSize="12pt"
	                android:textStyle="bold" >
            	</Button>
            </LinearLayout>
		</ScrollView>
	</LinearLayout>
</LinearLayout>
	        