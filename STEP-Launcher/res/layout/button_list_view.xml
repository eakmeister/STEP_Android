<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/buttonListViewLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <ListView 
        android:id="@+id/buttonListViewFrameLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1">
    </ListView>
    
	<LinearLayout
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:gravity="right"
	    android:orientation="vertical" >

	    <Button
	        android:id="@+id/buttonListViewUpButton"
	        android:layout_width="70dp"
	        android:layout_height="70dp"
	        android:layout_weight="0"
	        android:background="@drawable/button_up_orange_selector" >
	    </Button>
	    
	    <View
	        android:layout_width="70dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1">
	    </View>
	    
	    <Button
	        android:id="@+id/buttonListViewDownButton"
	        android:layout_width="70dp"
	        android:layout_height="70dp"
	        android:layout_weight="0"
	        android:background="@drawable/button_down_orange_selector" >
	    </Button>
    
    </LinearLayout>

</LinearLayout>