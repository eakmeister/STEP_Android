<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:layout_width="fill_parent"
    	android:layout_height="@dimen/music_top_bar_height"
    	android:orientation="horizontal" >
    	
	    <TextView
	        android:id="@+id/music_title"
	        android:layout_width="fill_parent"
	        android:layout_height="@dimen/music_top_bar_height"
	        android:gravity="center_vertical|center_horizontal"
	        android:text="Music view" />
	    
	</LinearLayout>
	
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

	    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	   		android:layout_width="fill_parent"
	   		android:layout_height="fill_parent"
	    	android:orientation="horizontal" >
	    
	        <Button
	            android:id="@+id/music_play_button"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_marginBottom="@dimen/button_spacing"
	            android:layout_marginLeft="10dp"
	            android:layout_marginRight="@dimen/button_spacing"
	            android:layout_weight="0.25"
	            android:background="@drawable/music_button"
	            android:onClick="onClick"  />
	   </LinearLayout>
        
    </LinearLayout>
</LinearLayout>