<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layBtnNTable"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="146dp"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btnAddContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:background="#cdc9c9"
                android:clickable="true"
                android:text="Add Contact"
                android:textColor="#000"
                android:textSize="12pt"
                android:textStyle="bold" >
            </Button>

			<ListView 
		    android:id="@+id/addressFrag_listview"
        	android:layout_width="fill_parent"
        	android:layout_height="fill_parent"
        	android:visibility="visible"
        	android:scrollbars="vertical" />
			
        </LinearLayout>
		
		<ScrollView
		    android:id="@+id/scrlConatact"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:visibility="visible">
	        <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical" >
	
	            <LinearLayout
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:orientation="vertical"
	                android:background="#ededed" >
	                
	                <TextView
						android:id="@+id/contact_id"
						android:text=""
						android:layout_width="fill_parent"
	                	android:layout_height="wrap_content"
	                	android:visibility="gone"/>
	                <EditText
	                    android:id="@+id/contact_DisplayName"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="6dip"
	                    android:layout_marginRight="6dip"
	                    android:hint="Name"
	                    android:inputType="textEmailSubject|textAutoCorrect|textCapSentences|textImeMultiLine"
	                    android:imeOptions="actionNext"
	                    android:singleLine="true"
	                    android:textColor="@android:color/primary_text_light"
	                    android:textAppearance="?android:attr/textAppearanceMedium">
		        	</EditText>
		        	
	                <EditText
	                    android:id="@+id/contact_address"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="6dip"
	                    android:layout_marginRight="6dip"
	                    android:hint="Address"
	                    android:inputType="textEmailSubject|textAutoCorrect|textCapSentences|textImeMultiLine"
	                    android:imeOptions="actionNext"
	                    android:singleLine="true"
	                    android:textColor="@android:color/primary_text_light"
	                    android:textAppearance="?android:attr/textAppearanceMedium">
		        	</EditText>
		        	
	                <EditText
	                    android:id="@+id/contact_email"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="6dip"
	                    android:layout_marginRight="6dip"
	                    android:hint="Email (johndoe@email.com)"
	                    android:inputType="textEmailSubject|textAutoCorrect|textCapSentences|textImeMultiLine"
	                    android:imeOptions="actionNext"
	                    android:singleLine="true"
	                    android:textColor="@android:color/primary_text_light"
	                    android:textAppearance="?android:attr/textAppearanceMedium">
		        	</EditText>
		        	
	                <EditText
	                    android:id="@+id/contact_Homephone"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="6dip"
	                    android:layout_marginRight="6dip"
	                    android:hint="Home Phone Number (xxx-xxx-xxxx)"
	                    android:inputType="textEmailSubject|textAutoCorrect|textCapSentences|textImeMultiLine"
	                    android:imeOptions="actionNext"
	                    android:singleLine="true"
	                    android:textColor="@android:color/primary_text_light"
	                    android:textAppearance="?android:attr/textAppearanceMedium">
		        	</EditText>
		        	
	                		        	
	                <EditText
	                    android:id="@+id/contact_Mobilephone"
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="6dip"
	                    android:layout_marginRight="6dip"
	                    android:hint="Mobile Phone Number (xxx-xxx-xxxx)"
	                    android:inputType="textEmailSubject|textAutoCorrect|textCapSentences|textImeMultiLine"
	                    android:imeOptions="actionNext"
	                    android:singleLine="true"
	                    android:textColor="@android:color/primary_text_light"
	                    android:textAppearance="?android:attr/textAppearanceMedium">
		        	</EditText>
            	</LinearLayout>
	        	<Button
	                android:id="@+id/btnSave"
	                android:visibility="gone"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_margin="2dip"
	                android:background="#cdc9c9"
	                android:clickable="true"
	                android:text="Save"
	                android:textColor="#000"
	                android:textSize="12pt"
	                android:textStyle="bold" >
            	</Button>
            </LinearLayout>
		</ScrollView>
	</LinearLayout>
</LinearLayout>
	        